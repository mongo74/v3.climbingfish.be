@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Root.cshtml";
}

@Umbraco.RenderMacro("JustifiedImageGallery")
@Umbraco.RenderMacro("SimpleBreadcrumb")

<div class="container body-content">
    <div class="row">
	    <div class="col-md-9">
            <h1>
                @CurrentPage.title
				<br />
				<small>@String.Format("{0:dd MMMM yyyy}", @CurrentPage.CreateDate)</small>
            </h1>
			<p>
            <em>@Html.Raw(CurrentPage.introduction)</em>
			</p>
            @CurrentPage.bodyContent
        </div>
        
        <div class="col-md-3 hidden-xs hidden-sm hidden-print hidden-md">
            @Umbraco.RenderMacro("AllNewsItems", new { startNodeID = "1326" })
        </div>
    </div>
</div>


@section Bottomscripts
{
    <script type="text/javascript">
        $("#justifiedGallery").justifiedGallery({
            rowHeight: 70,
            lastRow: 'nojustify',
            margins: 3,
            captions: false
        });
    </script>
}