@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Root.cshtml";
}
@{
    var image = Umbraco.Media(Convert.ToInt32(CurrentPage.GetPropertyValue("mainImage")));
}

<div id="ErrorPage">
    <div class="greyscaleSection ErrorPageSection" data-background="@image.Url"></div>
    <div class="SectionContent ErrorPageSection">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="MessageBlock">
                        <h1>
                            @CurrentPage.title
                        </h1>
                        @CurrentPage.textBlock
                        
                        @if (CurrentPage.Id != 1364)
                        {
                            @Umbraco.RenderMacro("ContactUsCTA", new { CTABlock = "1357" })
                        }

                      

                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
        </div>
    </div>
</div>

@section Bottomscripts {
    <script src="~/scripts/climbingfish.js"></script>
    <script src="~/scripts/scripts.js"></script>
}